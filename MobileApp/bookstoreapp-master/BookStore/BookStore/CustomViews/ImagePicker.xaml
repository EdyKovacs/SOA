<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BookStore.CustomViews.ImagePicker"
    HeightRequest="150"
    CornerRadius="5"
    HasShadow="False"
    BackgroundColor="{StaticResource GenreBoxGray}">
    <StackLayout
        x:Name="Container"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Image
            x:Name="InnerIcon"
            Source="upload_icon.png"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <Label
            x:Name="InnerLabel"
            Text="Upload"
            TextColor="{StaticResource StandardTextDarkGray}"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <ImageButton
            x:Name="RemoveButton"
            Clicked="OnRemoveButtonClicked"
            IsVisible="false"
            Source="remove_icon.png"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
        <Image
            x:Name="PreviewImage"
            HeightRequest="50"
            WidthRequest="50"
            IsVisible="false"
            VerticalOptions="Center"/>
    </StackLayout>
</Frame>
